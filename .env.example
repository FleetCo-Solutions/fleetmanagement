# ============================================
# Database Configuration
# ============================================
LOCAL_DATABASE_URL="postgresql://user:password@host:port/database"

# ============================================
# Authentication & Security
# ============================================
AUTH_SECRET="your-auth-secret-key-here"
JWT_SECRET="your-jwt-secret-key-here"

# ============================================
# Email Service (Resend)
# ============================================
RESEND_API_KEY="re_your_resend_api_key_here"

# ============================================
# Backend API Configuration
# ============================================
BACKENDBASE_URL="http://your-production-backend-url:port/api"
LOCAL_BACKENDBASE_URL="http://localhost:3000/api"

# ============================================
# IoT Backend Configuration (Real-time Tracking)
# ============================================
# IoT Backend API base URL for vehicle tracking
NEXT_PUBLIC_IOT_BACKEND_URL="http://localhost:3001"

# IoT Backend WebSocket URL for real-time location updates
NEXT_PUBLIC_IOT_WEBSOCKET_URL="ws://localhost:3002/ws"

# API key for IoT backend to sync vehicle locations to this app (internal PUT /api/internal/vehicles/locations)
IOT_SYNC_API_KEY="your-secret-iot-sync-api-key"

# ============================================
# Mock API Configuration (Optional)
# ============================================
NEXT_PUBLICFAKE_API="https://my.api.mockaroo.com"
MOCKAROO_KEY="your-mockaroo-key-here"

# ============================================
# License Expiry Notification Settings
# ============================================
# Secret token for authenticating external cron jobs
# Generate a secure random string for production
CRON_SECRET="your-secure-cron-secret-token-here"

# Notification thresholds (days before/after expiry)
# Format: comma-separated list (positive = before, negative = after)
# Default: 30,15,7,-5 (notify at 30, 15, 7 days before and 5 days after expiry)
LICENSE_EXPIRY_WARNING_DAYS="30,15,7,-5"
# Flespi HTTP stream shared secret (set this same value in the flespi stream custom header X-Flespi-Secret)
FLESPI_SECRET="your_random_secret_here"
